<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

    	<!-- View Form -->

    	<record model="ir.ui.view" id="siscond_floor_view_form">
		    <field name="name">Floor Form</field>
		    <field name="model">siscond_infrastructure.floor</field>
		    <field name="priority" eval="16"/>
		    <field name="arch" type="xml">
		        <form string="Idea form">
		        	<sheet>
				    <group colspan="4">
				        <group colspan="2" col="2">
				            <separator string="Piso" colspan="2"/>
				            <field name="name"/>
				            <field name="active"/>
				            <field name="property_ids">
				            	<tree editable="True">
				            		<field name="name"/>
				            		<field name="type_property_id"/>
				            		<field name="owner_ids" widget="many2many_tags"/>
				            		<field name="aliquot"/>
				            	</tree>
				            </field>
				        </group>
				    </group>
				</sheet>
				</form>
		    </field>
		</record>


		<!-- View Tree -->

		<record model="ir.ui.view" id="siscond_floor_view_tree">
		    <field name="name">Floor Tree</field>
		    <field name="model">siscond_infrastructure.floor</field>
		    <field name="priority" eval="16"/>
		    <field name="arch" type="xml">
		        <tree string="Idea form">
				          
				            <field name="name"/>
				            <field name="property_ids"/>
				            <field name="active"/>
				</tree>
		    </field>
		</record>



        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="siscond_floor_action">
            <field name="name">Courses</field>
            <field name="res_model">siscond_infrastructure.floor</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first structure
                </p>
            </field>
        </record>

    </data>
</openerp>